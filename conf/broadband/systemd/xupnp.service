[Unit]
Description=A Upnp service
After=CcspPandMSsp.service xcal-device.service
ConditionPathExists=/tmp/start_xupnp

[Service]
SyslogIdentifier="xupnp"
Environment="LOG4C_RCPATH=/etc"
EnvironmentFile=/etc/device.properties
ExecStart=/bin/sh -c 'val=`syscfg get start_upnp_service`; if [ "$val" == "true" ]; then `/usr/bin/xdiscovery /etc/xdiscovery.conf /rdklogs/logs/xdiscovery.log`; \
                      else echo "Stopping XDiscovery Service as RFC is OFF" >> ${PROCESS_RESTART_LOG}; `systemctl stop xupnp`; fi '
ExecStop=/bin/sh -c 'echo "`date`: Stopping/Restarting XDiscovery Service" >> ${PROCESS_RESTART_LOG}'
Restart=always

[Install]
WantedBy=wifi-initialized.target
